{
    "name": "new-folder-plus",
    "displayName": "New Folder+",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.createFromDate",
                "title": "New Folder(now)"
            },
            {
                "command": "extension.createFromClipboard",
                "title": "New Folder(clipboard)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.createFromDate",
                    "group": "navigation"
                },
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.createFromClipboard",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.createFromDate",
                    "when": "false"
                },
                {
                    "command": "extension.createFromClipboard",
                    "when": "false"
                }
            ]
        },
        "configuration":[
            {
                "title": "NewFolder+",
                "properties": {
                    "newFolderPlus.dateFormat": {
                        "type":"string",
                        "description": "現在日時からフォルダーを作成する際のフォーマットを指定します",
                        "default": "YYYYMMDD"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "moment": "^2.26.0"
    }
}
